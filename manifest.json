{
  "manifest_version": 2,

  "name": "Olark Conversation Recommender",
  "description": "This extension POSTs the conversation to an API that gives recommendations to look into.",
  "version": "2.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["https://chat.olark.com/*"],
      "js": ["jquery-2.1.4.min.js", "olark-listener.js"]
    }
  ],
  "permissions": [
    "activeTab",
    "storage",
    "http://localhost/*",
    "https://ajax.googleapis.com/"
  ]
}
