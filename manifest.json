{
  "manifest_version": 2,

  "name": "Olark Message POSTer",
  "description": "This extension listens to the messages in a chat and POSTs them to a specified URL",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["https://chat.olark.com/"],
      "js": ["jquery-2.1.4.min.js", "olark-listener.js"]
    }
  ],
  "permissions": [
    "activeTab",
    "http://localhost/*",
    "https://ajax.googleapis.com/"
  ]
}
